<%- include('../partials/header') %>
        <% authors.forEach((a) => { %>
            <div>
                <% if (user && a.favoritedBy.some(e => e.equals(user._id))) { %>
                    <form action="/authors/favorites/<%= a._id %>/?_method=DELETE" method="POST">
                        <input type="submit" value="Unfavorite">
                    </form>
                    <% } else { %>
                    <form action="/authors/favorites/<%= a._id %>" method="POST">
                        <input type="submit" value="Favorite">
                    </form>
                <% } %>
                <img src="<%= a.picture %>" alt="Cover Art">
                <a id="authorLink" href="/authors/<%= a._id %>"><%= a.name %></a>
                <h3><%= a.rating %></h3>
                <p><%= a.about %></p>
            </div>
        <% }); %> 
<%- include('../partials/footer') %>