<%- include('../partials/header') %>
        <% authors.forEach((a) => { %>
            <% if (a.favoritedBy.some(e => e.equals(user._id))) { %>
                <div>
                    <img src="<%= a.picture %>" alt="Cover Art">
                    <form action="/authors/favorites/<%= a._id %>/?_method=DELETE" method="POST">
                        <input type="submit" value="Unfavorite">
                    </form>
                    <a id="authorLink" href="/authors/<%= a.name %>"><%= a.name %></a>
                    <h3><%= a.rating %></h3>
                </div>
            <% } %>
        <% }); %> 
<%- include('../partials/footer') %>